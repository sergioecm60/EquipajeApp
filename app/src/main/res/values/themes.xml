<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EquipajeApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="Theme.EquipajeApp.NoActionBar" parent="Theme.EquipajeApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EquipajeApp.FullScreen" parent="Theme.EquipajeApp.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
